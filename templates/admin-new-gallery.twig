{% extends 'main.twig' %}
{% set active_page = 'admin' %}


{% block title %}Admin - Update Content{% endblock %}


{% block heading %}Add New Gallery{% endblock %}

{% block admin %}

	<div class="row">

		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">

				<div class="panel-heading">Add New Gallery</div>

				<div class="panel-body">

					<form action="{{ path_for('adminNewGallery.create') }}" method="post" autcomplete="off">

						<div class="form-group{{ errors.email ? ' has-error' : '' }}">

							<label for="home_img">Add image url</label>

							<input type="text" name="home_img" id="home_img" class="form-control" >

							<label for="high_res_img">Gallery High Res Img Url</label>

							<input type="text" name="high_res_img" id="high_res_img" class="form-control" >

							<label for="lightbox_text">Gallery High Res Text</label>

							<input type="text" name="lightbox_text" id="lightbox_text" class="form-control" >

              <label for="ul_id">New Gallery Name</label>

							<input type="text" name="ul_id" id="ul_id" class="form-control" >



							<label for="gallery_text">New Gallery Text</label>

							<textarea name="gallery_text" id="gallery_text" class="text_area" rows="10" cols="80"></textarea>

							<label for="orientation">orientation</label><br/>
							<span>Portrait</span>
							<input type="radio" name="orientation" value="portrait" checked />
							<span>landscape</span>
							<input type="radio" name="orientation" value="landscape" />




						</div>


						<button type="submit" class="btn btn-default">Add New Gallery</button>

						{{ csrf.field | raw }}

					</form>

				</div>


            </div>

		</div>

	</div>


{% endblock %}
