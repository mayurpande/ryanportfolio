{% extends 'main.twig' %}
{% set active_page = 'admin' %}

{% block title %}Admin - Update Content{% endblock %}


{% block heading %}Delete Gallery Image{% endblock %}

{% block admin %}

	<div class="row">

		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">

				<div class="panel-heading">Select img(s) to delete</div>

				<div class="panel-body">

					<form action="{{ path_for('adminGallery.delete') }}" method="post" autcomplete="off">

						<div class="form-group{{ errors.email ? ' has-error' : '' }}">

              {% for homeItem in homePage %}

                    {% if homeItem.ul_id != 'home-ul' and homeItem.ul_update_no != 0 %}

                          <p>Gallery: {{ homeItem.ul_id }}</p>
                          <p>Id No: {{ homeItem.ul_update_no }}</p>
                          <p>Image title: {{ homeItem.home_img }}</p>
                          <p>High Res Img title: {{ homeItem.high_res_img }}</p>
                          <p><input type="checkbox" name="home_img[]" id="{{ homeItem.id }}" value="{{ homeItem.id }}" /></p>
                          <hr />


                     {% endif %}

              {% endfor %}


						</div>


						<button type="submit" class="btn btn-default">Select img(s) to delete</button>

						{{ csrf.field | raw }}

					</form>

				</div>


        </div>

		</div>

	</div>


{% endblock %}
