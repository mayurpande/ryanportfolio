{% extends 'main.twig' %}
{% set active_page = 'admin' %}

{% block title %}Admin - Update Content{% endblock %}


{% block heading %}Update home page{% endblock %}

{% block admin %}

	<div class="row">

		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">

				<div class="panel-heading">Update Home Page</div>

				<div class="panel-body">

					<form action="{{ path_for('adminHome.update') }}" method="post" autcomplete="off">

						<div class="form-group{{ errors.email ? ' has-error' : '' }}">

							<label for="home_img">Update Home Page Img Url</label>

							<input type="text" name="home_img" id="home_img" class="form-control" >

							<label for="next_ul">Update Home Page Next Gallery</label>

							<input type="text" name="next_ul" id="next_ul" class="form-control" >

						<!--	<label for="ul_id">Update Home Page </label>

							<input type="text" name="home_img" id="home_img" class="form-control" > -->

              <label for="ul_update_no">Update ID no</label>

              <input type="text" name="ul_update_no" id="ul_update_no" class="form-control" >

						</div>


						<button type="submit" class="btn btn-default">Update home page</button>

						{{ csrf.field | raw }}

					</form>

				</div>


            </div>

		</div>

	</div>


{% endblock %}
