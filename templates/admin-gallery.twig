{% extends 'main.twig' %}
{% set active_page = 'admin' %}

{% block title %}Admin - Update Content{% endblock %}


{% block heading %}Add to portrait page{% endblock %}

{% block admin %}

	<div class="row">

		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">

				<div class="panel-heading">Add to existing Gallery</div>

					<div class="panel-body">

						<form action="{{ path_for('adminGallery.create') }}" method="post" autcomplete="off">

							<div class="form-group{{ errors.email ? ' has-error' : '' }}">

								<label for="home_img">Gallery Img Url</label>

								<input type="text" name="home_img" id="home_img" class="form-control" >

								<label for="ul_id">Gallery Name</label>

								<input type="text" name="ul_id" id="ul_id" class="form-control" >

								<label for="high_res_img">Gallery High Res Img Url</label>

								<input type="text" name="high_res_img" id="high_res_img" class="form-control" >

								<label for="lightbox_text">Gallery High Res Img Text</label>

								<input type="text" name="lightbox_text" id="lightbox_text" class="form-control" >


							</div>

							<button type="submit" class="btn btn-default">Add Gallery</button>

							{{ csrf.field | raw }}

						</form>

				</div>


      </div>

		</div>

	</div>


{% endblock %}
