{% extends 'main.twig' %}

{% block title %}Admin - Update Content{% endblock %}


{% block heading %}Update Portrait page{% endblock %}

{% block admin %}
	
	<div class="row">
		
		<div class=".col-md-6 col-md-offset-3 for">

			<div class="panel panel-default">
				
				<div class="panel-heading">Update Portrait Page</div>

				<div class="panel-body">
					
					<form action="{{ path_for('adminPortrait.update') }}" method="post" autcomplete="off">
						
						<div class="form-group{{ errors.email ? ' has-error' : '' }}">
							
							<label for="port_img">Update Portrait Page Img Url</label>

							<input type="text" name="port_img" id="port_img" class="form-control" >
                            
                            <label for="port_img">Update Portrait light box text</label>

							<input type="text" name="port_light_text" id="port_light_text" class="form-control" >
                            
                            <label for="port_id">Update ID no</label>
                            
                            <input type="text" name="port_id" id="port_id" class="form-control" >

						</div>
					

						<button type="submit" class="btn btn-default">Update portrait page</button>

						{{ csrf.field | raw }}
						
					</form>

				</div>
                
                
            </div>

		</div>

	</div>
	
	
{% endblock %}
