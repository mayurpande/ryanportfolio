
{% extends 'main.twig' %}
{% set active_page = 'home' %}

{% block title %}Ryan{% endblock %}

{% block landing %}
<div id="nameHeader" onclick='crossfade(".landing-page", "#wrapper")'>
  <h1>Ryan O Toole Collett</h1>
</div>
<div id="moving-line"></div>
<div id="galleryNames">
    <div class="galleryItems" onclick='showGallery(".landing-page", ".port-ul")'>Portrait</div>
    <div class="galleryItems" onclick='showGallery(".landing-page", ".land-ul")'>Landscape</div>
    <div class="galleryItems" onclick='showGallery(".landing-page", ".misc-ul")'>Miscellaneous</div>
</div>

{% endblock %}

{% block content %}

  <div class="cycle-slideshow tempActive" data-cycle-fx="fadeout"
      data-cycle-speed=1500
      data-cycle-timeout=4000
      data-cycle-next="#next"
      data-cycle-manual-fx="scrollHorz"
      data-cycle-manual-speed="200" id="home-slide"> <!--data-cycle-slides="li"> -->
  	{% for homeItem in homePage %}
      {% if homeItem.ul_id == "home-ul" %}
              <img src="img/{{ homeItem.home_img }}" alt="{{ homeItem.home_img}}" onclick='crossfade("#home-slide", ".{{ homeItem.next_ul }}")' />
      {% endif %}
    {% endfor %}
  </div>

  <ul class="ul-list homeUl">
    {% for homeItem in homePage %}
      {% if homeItem.ul_id == "home-ul" %}
        <li class="{{ homeItem.ul_id }} temp" id="{{ homeItem.id }}" onclick='crossFadePc(".temp", ".{{ homeItem.next_ul }}")'>
          <img src="img/{{ homeItem.home_img }}" alt="{{ homeItem.home_img }}"/>
          <div class="textHover"><p>{{ homeItem.next_ul }}</p></div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

  <ul class="ul-list lightBox">
    {% for homeItem in homePage %}
      {% if homeItem.ul_id != "home-ul" %}
        <li class="{{ homeItem.ul_id }}" id="{{ homeItem.ul_update_no }}">
          <img src="img/{{ homeItem.home_img }}" alt="{{ homeItem.home_img }}"/>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

{% endblock %}
