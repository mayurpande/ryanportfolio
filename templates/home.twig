{% extends 'main.twig' %}
{% set active_page = 'home' %}

{% block title %}Ryan Site - Tell me what to put here{% endblock %}



{% block content %}

<div class="cycle-slideshow" data-cycle-fx="fadeout"
    data-cycle-speed=1500
    data-cycle-timeout=4000
    data-cycle-next="#next"
    data-cycle-manual-fx="scrollHorz"
    data-cycle-manual-speed="200" id="home-slide"> <!--data-cycle-slides="li"> -->
	{% for homeItem in homePage %}
	<!--	<li id="{{ homeItem.id }}" onclick='crossfade(".cycle-slideshow", "#{{ homeItem.next_ul }}")'>-->
            <img src="img/{{ homeItem.home_img }}" alt="{{ homeItem.home_img}}" onclick='crossfade("#home-slide", "#{{ homeItem.next_ul }}")' />
    <!--    </li>-->
    {% endfor %}
</div>


<ul class="ul-list" id="home-ul">
    {% for homeItem in homePage %}
        <li id="{{ homeItem.id }}" onclick='crossfade("#home-ul", "#{{ homeItem.next_ul }}")'>
            <img src="img/{{ homeItem.home_img }}" alt="{{ homeItem.home_img }}"/>
        </li>
    {% endfor %}
</ul>


<ul class="ul-list lightBox" id="port-ul">
    {% for portItem in portPage %}
        <li id="{{ portItem.id }}">
            <a href="img/{{ portItem.port_img }}">
                <img src="img/{{ portItem.port_img }}" alt="{{ portItem.port_img }}"/>
                <p class="lightBoxText">{{ portItem.port_light_text }}</p>
            </a>
        </li>
    {% endfor %}
    <p class="back-mobile" onclick='crossfade("#port-ul", "#home-slide")'>
        Go back
    </p>
		<p class="back-tablet-pc" onclick='crossfade("#port-ul", "#home-ul")'>
        Go back
    </p>
</ul>

<ul class="ul-list lightBox" id="land-ul">
    {% for landItem in landPage %}
        <li id="{{ landItem.id }}">
            <a href="img/{{ landItem.land_img }}">
                <img src="img/{{ landItem.land_img }}" alt="{{ landItem.land_img }}"/>
                <p class="lightBoxText">{{ landItem.land_light_text }}</p>
            </a>
        </li>
    {% endfor %}
    <p class="back-mobile" onclick='crossfade("#land-ul", "#home-slide")'>
        Go back
    </p>
		<p class="back-tablet-pc" onclick='crossfade("#land-ul", "#home-ul")'>
				Go back
		</p>
</ul>


<ul class="ul-list lightBox" id="misc-ul">
    {% for miscItem in miscPage %}
        <li id="{{ miscItem.id }}">
          <a href="img/{{ miscItem.misc_img }}">
              <img src="img/{{ miscItem.misc_img }}" alt="{{ miscItem.misc_img }}"/>
              <p class="lightBoxText">{{ miscItem.misc_light_text }}</p>
          </a>
        </li>
    {% endfor %}
    <p class="back-mobile back-button" onclick='crossfade("#misc-ul", "#home-slide")'>
        Go back
    <p>
		<p class="back-tablet-pc back-button" onclick='crossfade("#misc-ul", "#home-ul")'>
				Go back
		<p>
</ul>

{% endblock %}
